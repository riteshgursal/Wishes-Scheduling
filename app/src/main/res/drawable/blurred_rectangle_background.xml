<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Blur Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#B3FFFFFF" /> <!-- Semi-transparent white for blur effect -->
            <corners android:radius="12dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Blur Layer using RenderScript (Android 5.0+) -->
    <!-- This requires setting up RenderScript for actual blur, or using Glide/Blurry libraries for dynamic blur. -->
    <!-- Example is static, but you can implement dynamic blur with those libraries if needed. -->
</layer-list>
